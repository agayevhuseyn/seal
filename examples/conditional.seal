// conditional.seal

// default
if true
    print('hi')
else if true
    print('hello')
else
    print('goodbye')

// shortened (only allowed if one expression comes, yes assignments are expression)
if true then a = 0
else if true then print('hello')
else print('goodbye')

print(a) // prints 0

// mixed
n = 3
if n == 0 then print('zero')
else if n == 1 then print('one')
else if n == 2 then print('two')
else if n == 3
    print('three')
else
    print('not recognized')
